<%- include('../partials/header') %>

  <div class="jumbotron">
    <h1 class="display-4"><%= post.headline %></h1>
    <div class="btns-edit-delete">
      <a href="/posts/<%= post.id %>/edit"><button class="btn btn-primary btn-lg">Edit</button></a>
      <form action="/posts/<%=post.id%>?_method=DELETE" method="POST">
        <button class="btn btn-primary btn-lg">Delete</button>
      </form>
    </div>
    <img class="card-img-top shadow-lg rounded" src="<%= post.img %>" alt="Card image cap">
    <p class="lead"><%= post.caption %></p>
    <hr class="my-4">
    <p><%= post.content %></p>
  
    <p class="lead">
      <a class="btn btn-primary btn-lg" href="/posts" role="button">Back</a>
    </p>
  </div>

<%- include('../partials/footer') %>